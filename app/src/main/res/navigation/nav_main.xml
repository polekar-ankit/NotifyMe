<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/nav_user">

    <fragment
        android:id="@+id/nav_user"
        android:name="com.gipl.notifyme.ui.me.MeFragment"
        android:label="MeFragment" >
        <action
            android:id="@+id/action_nav_user_to_checkInActivity"
            app:destination="@id/checkInActivity" />
    </fragment>
    <fragment
        android:id="@+id/nav_notification"
        tools:layout="@layout/layout_notification_list"
        android:name="com.gipl.notifyme.ui.notification.NotificationListFragment"
        android:label="NotificationListActivity" />
    <activity
        android:id="@+id/checkInActivity"
        android:name="com.gipl.notifyme.ui.checkin.CheckInActivity"
        android:label="CheckInActivity" />
</navigation>