<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="notification"
            type="com.gipl.swayam.data.model.api.notification.Notification" />

        <variable
            name="linkLabel"
            type="String" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/_2sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@{@string/label_for + ` : ` + notification.forGroup}"
                app:layout_constraintEnd_toStartOf="@+id/tv_announcement_date"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="for :abc elp ha ads" />

            <LinearLayout
                android:id="@+id/layout_parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/iv_data_icon"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/tv_title">

                <TextView
                    android:id="@+id/tv_announcement_title"
                    style="@style/TextPrimaryBold"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="@{notification.title}" />

                <TextView
                    android:id="@+id/tv_massage"
                    style="@style/TextPrimary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:autoLink="web"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:text="@{notification.message}" />

                <!-- <TextView
                 android:id="@+id/label_open"
                 style="@style/TextLabelPrimary"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableEnd="@drawable/vc_arrow_right"
                 app:setLinkLabel="@{linkLabel}"
                 android:visibility='@{linkLabel.equals("") ? View.GONE : View.VISIBLE}'
                 android:layout_marginTop="@dimen/_5sdp"
                 android:layout_marginBottom="@dimen/_5sdp"/>-->

            </LinearLayout>

            <TextView
                android:id="@+id/tv_announcement_date"
                style="@style/TextSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="@{notification.displayDate}"
                android:textColor="#eb6400"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="20-Mar-2020 " />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:padding="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gadre_logo"
                tools:layout_editor_absoluteX="7dp" />

            <ImageView
                android:id="@+id/iv_data_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_1sdp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.53"
                app:layout_constraintStart_toStartOf="@+id/tv_announcement_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_announcement_date" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>