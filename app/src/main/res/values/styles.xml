<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme with toolbar -->
    <style name="MyToolbarTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialogHeader">
        <item name="android:background">@drawable/bg_dialog_header</item>
    </style>

    <style name="dialogHeaderTitle">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">@dimen/dialog_header_title_txt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/bg_custom_button</item>
        <item name="android:fontFamily">@font/proxima_nova_alt_regular</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:minWidth">@dimen/_150sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="buttonStyleBase" parent="Widget.AppCompat.Button">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/proxima_nova_alt_regular</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:minWidth">@dimen/_150sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="btnCheckIn" parent="buttonStyleBase">
        <item name="android:background">@drawable/bg_btn_check_in</item>
    </style>
    <style name="btnRescan" parent="buttonStyleBase">
        <item name="android:background">@drawable/bg_btn_rescan</item>
    </style>

    <style name="meEmpButton" parent="buttonStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:minWidth">@dimen/_200sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
    </style>

    <style name="lblEditText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/proxima_nova_alt_regular</item>
        <item name="android:textColor">@color/edit_text_title</item>
        <item name="android:textSize">@dimen/edit_text_title</item>
    </style>
    <style name="lblMeEmpOtherInfo" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#392D2D</item>
        <item name="android:fontFamily">@font/proxima_nova_alt_regular</item>
        <item name="android:textSize">@dimen/me_emp_other_info</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
    </style>
    <style name="TextTitle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/proxima_nova_alt_regular</item>
    </style>

    <style name="TextSubTitleBold">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/proxima_nova_alt_regular</item>
    </style>

    <style name="TextPrimaryBold">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/proxima_nova_alt_regular</item>
    </style>

    <style name="TextLabelPrimary">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
